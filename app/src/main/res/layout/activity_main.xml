<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context="edu.cnm.deepdive.montyhall.MainActivity"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:gravity="center">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:layout_weight="3"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <FrameLayout
      android:id="@+id/door1"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@drawable/door_shape"
      android:layout_margin="10dp"
      android:padding="10dp">
      <TextView
        android:id="@+id/door1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Door 1"
        android:layout_gravity="center"/>
      <ImageView
        android:id="@+id/door1_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </FrameLayout>

    <FrameLayout
      android:id="@+id/door2"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@drawable/door_shape"
      android:layout_margin="10dp"
      android:padding="10dp">
      <TextView
        android:id="@+id/door2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Door 2"
        android:layout_gravity="center"/>
      <ImageView
        android:id="@+id/door2_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </FrameLayout>



    <FrameLayout
      android:id="@+id/door3"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_margin="10dp"
      android:padding="10dp"
      android:background="@drawable/door_shape">
      <TextView
        android:id="@+id/door3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Door 3"/>
      <ImageView
        android:id="@+id/door3_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </FrameLayout>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/switch_stay_buttons"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">
    <Button
      android:id="@+id/switch_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Switch"/>
    <Button
      android:id="@+id/stay_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Stay"/>

  </LinearLayout>

  <LinearLayout
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:paddingBottom="10dp">
  <Button
    android:id="@+id/play_again_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Play Again"/>
  <Button
    android:id="@+id/reset_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reset"/>

</LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Success Rate Switching: "/>
    <TextView
      android:id="@+id/switch_success_rate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0.0%"/>


  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Success Rate Staying: "/>
    <TextView
      android:id="@+id/stay_success_rate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0.0%"/>
  </LinearLayout>

</LinearLayout>
